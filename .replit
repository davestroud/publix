modules = ["nodejs-20", "web", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "App"

[[workflows.workflow]]
name = "App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd backend && uvicorn app.main:app --host localhost --port 8000 & cd frontend && npm run dev\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
